{
  "name": "mmo-packman",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "check": "npm run generate:game-rules:check && tsc -p tsconfig.server.json --noEmit && tsc -p tsconfig.client.json --noEmit",
    "test": "npm run generate:game-rules:check && npm run test:generator && npm run test:server-gate-utils && npm run test:server-game-rules && npm run test:server-world && npm run test:server-game",
    "test:generator": "node scripts/generate-game-rules.selftest.mjs",
    "test:server-gate-utils": "tsx src/server/gate_utils.selftest.ts",
    "test:server-game-rules": "tsx src/server/game_rules.selftest.ts",
    "test:server-world": "tsx src/server/world.selftest.ts",
    "test:server-game": "tsx src/server/game.selftest.ts",
    "generate:game-rules": "node scripts/generate-game-rules.mjs",
    "generate:game-rules:check": "node scripts/generate-game-rules.mjs --check",
    "simulate": "tsx src/server/simulate.ts",
    "simulate:rust": "cargo run --manifest-path rust/server/Cargo.toml --bin simulate --",
    "start": "node dist/server/server/index.js"
  },
  "dependencies": {
    "express": "^5.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.4",
    "@types/node": "^24.3.1",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.3.1"
  }
}
